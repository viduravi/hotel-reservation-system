<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.customer_info_controller">

    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

        <!-- Padding using Insets -->
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>
        <HBox layoutX="25.0" layoutY="349.0" spacing="15">
            <children>

                <!-- Title -->
                <Label prefHeight="30.0" prefWidth="238.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Customer Information" />
                <Label prefHeight="18.0" prefWidth="226.0" />
                <Button fx:id="btnHome" mnemonicParsing="false" onAction="#backToHomeAction" prefHeight="31.0" prefWidth="72.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="🏠Home" />
            </children>
        </HBox>

        <!-- TableView -->
        <TableView fx:id="customerTabel" prefHeight="300" prefWidth="580">
            <columns>
                <TableColumn fx:id="colCusId" prefWidth="100" text="Customer ID" />
                <TableColumn fx:id="colCusName" prefWidth="118.39997100830078" text="Name" />
                <TableColumn fx:id="colPhoneNo" prefWidth="110.39994812011719" text="Phone No." />
                <TableColumn fx:id="colCity" prefWidth="108.79998779296875" text="City" />
            <TableColumn fx:id="colAddress" prefWidth="110.40000610351558" text="Address" />
            </columns>
        </TableView>

        <!-- Buttons -->
        <HBox spacing="15">
            <Button fx:id="btnAdd" onAction="#addCustomerAction" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: #3498db;" text="Add Customer" />
            <Button fx:id="btnEdit" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: #f1c40f;" text="Edit Customer" />
            <Button fx:id="btnDelete" onAction="#deleteCustomerAction" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: #e74c3c;" text="Delete Customer" />
        </HBox>

    </VBox>
</AnchorPane>
