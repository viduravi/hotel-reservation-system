<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.add_customer_controller"
            prefWidth="400" prefHeight="360"
            style="-fx-background-color: #f9f9f9; -fx-border-color: #dcdcdc; -fx-border-radius: 10; -fx-background-radius: 10;">

    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">

        <!-- Title -->
        <Label text="Add Customer"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <!-- Form -->
        <GridPane hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Customer ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCustomerId" promptText="Customer ID"
                       prefHeight="35" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtName" promptText="Full Name"
                       prefHeight="35" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPhone" promptText="Phone Number"
                       prefHeight="35" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="City:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCity" promptText="City"
                       prefHeight="35" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Address:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="txtAddress" promptText="Address"
                      prefHeight="70" GridPane.rowIndex="4" GridPane.columnIndex="1"
                      style="-fx-font-size: 12px; -fx-padding: 6;"/>
        </GridPane>

        <!-- Buttons -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="btnSave" text="Save" onAction="#saveCustomerAction"
                    prefHeight="35" prefWidth="80"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
            <Button fx:id="btnCancel" text="Cancel" onAction="#cancelAction"
                    prefHeight="35" prefWidth="80"
                    style="-fx-background-color: #dcdcdc; -fx-text-fill: #333333; -fx-background-radius: 6;"/>
        </HBox>

    </VBox>
</AnchorPane>
