<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.room_info_controller">

    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

        <!-- Padding using Insets -->
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>
      <HBox layoutX="25.0" layoutY="349.0" spacing="15">
         <children>
      
              <!-- Title -->
              <Label prefHeight="30.0" prefWidth="238.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Hotel Room Information" />
            <Label prefHeight="18.0" prefWidth="226.0" />
            <Button fx:id="btnHome" mnemonicParsing="false" onAction="#bacToHomeAction" prefHeight="31.0" prefWidth="72.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ Home" />
         </children>
      </HBox>

        <!-- TableView -->
        <TableView fx:id="roomTable" prefHeight="300" prefWidth="580" style="-fx-font-weight: bold; -fx-text-fill: white;">
            <columns>
                <TableColumn fx:id="colRoomNumber" prefWidth="100" text="Room ID" />
                <TableColumn fx:id="colType" prefWidth="150" text="Type" />
                <TableColumn fx:id="colPrice" prefWidth="182.3999481201172" text="Description" />
                <TableColumn fx:id="colAvailability" prefWidth="115.20001220703125" text="Price" />
            </columns>
        </TableView>

        <!-- Buttons -->
        <HBox spacing="15">
            <Button fx:id="btnAdd" onAction="#addRoomAction" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Add Room" />
            <Button fx:id="btnEdit" style="-fx-font-weight: bold; -fx-background-color: #f1c40f; -fx-text-fill: white;" text="Edit Room" />
            <Button fx:id="btnDelete" onAction="#roomDeleteAction" style="-fx-font-weight: bold; -fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete Room" />
        </HBox>

    </VBox>
</AnchorPane>
